<header>
  <ul>
    <% if signed_in? %>
      <li><%= link_to "New Post", new_post_path %></li>
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Log out", signout_path, method: "delete" %></li>
    <% else %>
      <li><%= link_to "Login", signin_path %></li>
    <% end %>
  </ul>
</header>