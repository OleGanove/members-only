<div class="container">
  <h1>Login</h1>

  <%= form_for(:session, url: sessions_path) do |f| %>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %> 
   
     <p><%= f.label :email %></p>
     <p><%= f.text_field :email %></p>

     <p><%= f.label :password %></p>
     <p><%= f.password_field :password %></p>

     <br>

     <%= f.submit "Sign in" %>
  <% end %>
</div>